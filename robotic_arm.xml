<mujoco model="Robotic arm">

  <default>
    <geom rgba=".2 .6 .4 .6"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".6 .8 1" width="256" height="256"/>
  </asset>

  <visual>
    <global offwidth="2000" offheight="2000"/>
  </visual>

    <worldbody>
      <camera name="front_facing" pos="5 0 2" xyaxes="0 1 0 0 0 1"/>
      <light pos="0 1 1" dir="0 -1 -1" diffuse="1 1 1"/>
<!--
      <geom name="floor" size="0 0 .05" type="plane"/>
-->
      <body name="joe" pos="0 0 1">

        <geom name="torso" pos="0 0 0" size="0.2 0.5 0.8" type="box"/>

        <body name="head" pos="0 0 1.1">
          <geom type="sphere" size="0.3"/>
        </body>

        <body name="upper arm" pos="0.2 -0.5 0.8">
          <geom type="capsule" size="0.1" fromto="0 0 0 1.3 0 0"/>
          <joint name="shoulder_rotation1" type="hinge" axis="0 0 -1" pos="0 0 0" range="0 90"/>
          <joint name="shoulder_rotation2" type="hinge" axis="0 -1 0" pos="0 0 0" range="-180 90"/>

          <body name="forearm" pos="1.3 0 0">
            <geom type="capsule" rgba=".2 .2 .4 .6"  size="0.1" fromto="0 0 0 1.5 0 0"/>
            <joint name="elbow_rotation" type="hinge" axis="1 0 0" pos="0 0 0" range="-90 0"/>
            <joint name="elbow_flex" type="hinge" axis="0 -1 0" pos="0 0 0" range="0 160"/>
              
            <body name="hand" pos="1.5 0 0">
              <geom type="box" rgba=".2 .2 .4 1" pos="0.3 0 0"size="0.3 0.2 0.05"/>
              <joint name="wrist_rotation" type="hinge" axis="1 0 0" pos="0 0 0" range="-180 0"/>
              <joint name="wrist_flex" type="hinge" axis="0 -1 0" pos="0 0 0" range="-70 90"/>
            </body>
          </body>
        </body>
      </body>

    </worldbody>

<keyframe>
  <key
    name="salute"
    time="0"
    qpos="1.39819 0.133535 -0.65982 2.793 -0.43988"
    qvel="0 0 0 0 0"
  />
</keyframe>

</mujoco>
